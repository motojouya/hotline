{
  "name": "hotline",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "start": "pm2 start index.js -i max",
    "stop": "pm2 stop index",
    "restart": "npm stop && npm start",
    "test": "echo \"Error: no test specified\" && exit 1",
    "tag": "riot src/tag building/tag",
    "lib": "babel src/lib -d building/lib",
    "client": "babel src/client -d building/client",
    "compile": "npm run tag && npm run lib && npm run client",
    "develop": "npm run prepare; npm run compile && npm run webpack",
    "build": "npm run prepare; npm run compile && npm run webpack && npm run uglify; npm run clean",
    "prepare": "mkdir building; mkdir building/lib; mkdir building/client",
    "clean": "rm -R building; rm -f public/app/bundle.js",
    "uglify": "uglifyjs public/app/bundle.js -o public/app/bundle.min.js",
    "less": "lessc --clean-css styles.less styles.min.css",
    "webpack": "webpack"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-es2015-riot": "^1.1.0",
    "chai": "^4.1.1",
    "mocha": "^3.5.0",
    "riot": "^3.6.3",
    "uglify-js": "^3.0.28",
    "less": "^2.7.2",
    "webpack": "^3.5.5"
  },
  "dependencies": {
    "riot-observable": "^3.0.0",
    "express": "^4.15.4",
    "pm2": "^2.6.1",
    "superagent": "^3.6.0"
  }
}
